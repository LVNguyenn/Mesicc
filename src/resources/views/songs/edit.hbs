<div class="mt-4">
    <h1>Cập nhật bài nhạc</h1>

    <form class="mt-4" method="POST" action="/songs/{{song._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên bài nhạc</label>
            <input type="text" class="form-control" value="{{song.name}}" id="name" name="name">
        </div>

        <div class="form-group">
            <label for="type">Thể loại</label>
            <input type="text" class="form-control" value="{{song.type}}" id="type" name="type">
        </div>

        <div class="form-group">
            <label for="image">Link hình ảnh</label>
            <input type="text" class="form-control" value="{{song.image}}" id="image" name="image">
        </div>

        <div class="form-group">
            <label for="singer">Ca sĩ</label>
            <input type="text" class="form-control" value="{{song.singer}}" id="singer" name="singer">
        </div>

        <div class="form-group">
            <label for="path">Link nhạc</label>
            <input type="text" class="form-control" value="{{song.path}}" id="path" name="path">
        </div>
        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>